unit docs.graphics;


interface

uses
  Horse,
  Horse.GBSwagger;
procedure registry();
implementation

uses schemas.classes;

procedure registry();
begin
    Swagger
      .Path('graficos/anos')
        .Tag('Graficos')
        .get('anos que possuem registro de produção', 'anos que possuem registro de produção')
          .AddResponse(200)
            .Schema(TGraphicsYear)
          .&End
          .AddResponse(500, 'Internal Server Error')
          .&End
        .&End
      .&End
    .&End;

    Swagger
      .Path('graficos/comunidades')
        .Tag('Graficos')
        .get('comunidade que tem registro de produção', 'comunidade que tem registro de produção em determinado ano')
          .AddResponse(200)
            .Schema(TGraphicsYear)
          .&End
          .AddResponse(500, 'Internal Server Error')
          .&End
        .&End
      .&End
    .&End;
end;

end.
