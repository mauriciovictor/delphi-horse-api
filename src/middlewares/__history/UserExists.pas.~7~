unit UserExists;

interface

uses Horse;

procedure update(Req: THorseRequest; Res: THorseResponse; Next: Tproc);
implementation

uses UsuariosModel;

procedure update(Req: THorseRequest; Res: THorseResponse; Next: Tproc);
begin
  if not req.Params.ContainsKey('id') then
      begin
           res.Send('{message: id usuário é obrigatorio}');
           exit;
      end;

  const id =  req.Params.items['id'];
  const usuario = UsuariosModel.findById(id);

  Next();
end;

end.
